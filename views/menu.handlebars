<script src="js/jquery-1.10.2.min.js"></script>
<script src="js/calculate_price.js"></script>
<script src="js/bootstrap-select.min.js"></script>
<script>
$(document.body).on('click', 'ul.drinks li', function() {
	$(".juice-select").hide();
	$(".milk-select").hide();
	$(".default-select").hide();
	$(".default-input").hide();
	
	if ($(this).hasClass("juice")) {
		$(".juice-select").show();
	}
	else if ($(this).hasClass("milk")) {
		$(".milk-select").show();
	}
	else {
		$(".default-select").show();
		$(".default-input").show();
	}
	$('.drink-header').text($(this).text());

});
</script>
